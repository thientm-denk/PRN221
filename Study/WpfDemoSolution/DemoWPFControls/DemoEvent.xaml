<Window x:Class="DemoWPFControls.DemoEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWPFControls"
        mc:Ignorable="d"
        Title="DemoEvent" Height="300" Width="600" 
        MouseRightButtonDown="Window_MouseRightButtonDown">
    <Grid>
        <StackPanel>
            <Label>Events in WPF</Label>
            <ListBox>
                <ListBoxItem>Item 01</ListBoxItem>
                <ListBoxItem>Item 02</ListBoxItem>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button MinWidth="75" Name="btnOK" Margin="10">OK</Button>
                <Button MinWidth="75" Name="btnCancel" Margin="10">Cancel</Button>
            </StackPanel>
            <StatusBar>This is StatusBar</StatusBar>
        </StackPanel>
    </Grid>
</Window>
